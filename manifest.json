{
  "manifest_version": 3,
  "name": "Universal Cookie Saver",
  "version": "1.0",
  "description": "Save and export cookies from any site including login/session ones.",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "downloads",
    "webNavigation",
    "scripting"

  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
